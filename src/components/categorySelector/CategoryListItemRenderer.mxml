<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" width="385" height="151" styleName="catListItemRenderer">
	
	<fx:Script>
		<![CDATA[
			import vo.MenuCategory;
			override public function set data(value:Object):void
			{
				var mc:MenuCategory = MenuCategory(value);
				catNameId.text = mc.name.toUpperCase();
				catNameBGId.text = mc.name.toUpperCase();
			}
		]]>
	</fx:Script>
	
	<s:states>
		<s:State name="normal"/>
		<s:State name="hovered"/>
		<s:State name="selected" />
	</s:states>
		
	<s:Rect width="100%" height="100%" x="0" y="0">
		<s:fill>
			<s:SolidColor color="{getStyle('normalBackgroundColor')}" />
		</s:fill>
	</s:Rect>
	
	<s:Rect width="100%" height="100%" x="0" y="0" includeIn="selected">
		<s:fill>
			<s:SolidColor color="{getStyle('selectedBackgroundColor')}" />
		</s:fill>
	</s:Rect>
	
	<s:Label id="catNameBGId" styleName="catNameBG" x="-20" verticalCenter="-10" 
			 color.normal="{getStyle('normalBGColor')}" color.selected="{getStyle('selectedBGColor')}">
		<s:filters>
			<s:DropShadowFilter distance="3" angle="245" blurX="0" blurY="0" alpha=".2"/>
		</s:filters>
	</s:Label>
	
	<s:Label id="catNameId" styleName="catName" left="27" right="27" verticalCenter="-2" 
			 color.normal="{getStyle('normalColor')}" color.selected="{getStyle('selectedColor')}"/>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
</s:ItemRenderer>
