<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" width="508" height="69" styleName="optionsListItemRenderer">
	
	<s:Rect width="100%" height="100%">
		<s:fill>
			<s:SolidColor color="{getStyle('normalBackgroundColor')}" />
		</s:fill>
	</s:Rect>
	
	<s:Label id="optionName" x="20" width="360" verticalCenter="0" styleName="optionName" />
	<s:Image source="assets/optionsModal/removeOptionButton.png" right="20" verticalCenter="0" click="remove_clickHandler(event)" />
	
	<fx:Script>
		<![CDATA[
			import events.MenuItemOptionRemoved;
			
			import vo.MenuItemOption;
			
			override public function set data(value:Object):void
			{
				if (!value) return;
				super.data = value;
				var mi:MenuItemOption = MenuItemOption(value);				
				optionName.text = mi.name;
			}
			
			protected function remove_clickHandler(event:MouseEvent):void
			{
				var ev:MenuItemOptionRemoved = new MenuItemOptionRemoved(MenuItemOptionRemoved.ITEM_REMOVED, true);
				ev.menuItemOption = data as MenuItemOption;
				dispatchEvent(ev);
			}
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
</s:ItemRenderer>
