<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" backgroundAlpha="0" creationComplete="view1_creationCompleteHandler(event)" removedFromStage="view1_removedFromStageHandler(event)">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			import mx.events.FlexEvent;
			
			private var _carouselItems:ArrayCollection;
			
			[Bindable]
			public function get carouselItems():ArrayCollection
			{
				return _carouselItems;
			}

			public function set carouselItems(value:ArrayCollection):void
			{
				_carouselItems = value;
			}
			
			public function get currentIndex():int
			{
				var pos:Number = pagedList.scroller.viewport.horizontalScrollPosition;
				var viewportSize:Number = pagedList.scroller.viewport.width;				
				var selectedIndex:int = Math.round(pos / viewportSize);
				
				return selectedIndex;
			}

			protected function view1_creationCompleteHandler(event:FlexEvent):void
			{
				pagedList.dataGroup.addEventListener(FlexEvent.UPDATE_COMPLETE, dataGroupUpdateComplete);
			}
			private function dataGroupUpdateComplete(event:FlexEvent):void
			{
				var ev:HCarouselIndexChanging = new HCarouselIndexChanging(HCarouselIndexChanging.INDEX_CHANGING, true);
				dispatchEvent(ev);
			}
			
			protected function view1_removedFromStageHandler(event:Event):void
			{
				pagedList.dataGroup.removeEventListener(FlexEvent.UPDATE_COMPLETE, dataGroupUpdateComplete);
			}
			
		]]>
	</fx:Script>
	
	<s:List id="pagedList" 
			styleName="hCarouselStyle"
			itemRenderer="components.carousel.HCarouselItemRenderer"
			dataProvider="{carouselItems}"
			width="100%" height="100%"
			pageScrollingEnabled="true">
		<s:layout>
			<s:TileLayout orientation="rows" requestedRowCount="1" 
						  columnWidth="{pagedList.width}" rowHeight="{pagedList.height}" 
						  verticalGap="0" horizontalGap="0" horizontalAlign="center" verticalAlign="middle" />
		</s:layout>
		
	</s:List>
	
</s:View>
